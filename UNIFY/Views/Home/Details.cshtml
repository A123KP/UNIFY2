@model UNIFY.Models.Product

@{
    ViewData["Title"] = Model?.Name ?? "Product Details"; // Set page title
}

<div class="container product-details-page my-5">
    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            Product not found.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6 text-center mb-4 mb-md-0">
                @{
                    // THIS IS THE CORRECTED LOGIC, matching Index.cshtml
                    string imagePath = $"/images/ProductCatalog/Product{Model.ProductId}.jpg";
                    string fallbackImagePath = "/images/placeholder.png";
                }
                <img src="@imagePath" class="img-fluid rounded shadow-sm" alt="@Model.Name" style="max-height: 500px; object-fit: contain;"
                     onerror="this.onerror=null;this.src='@fallbackImagePath';">
            </div>

            <div class="col-md-6">
                <h1 class="display-4 mb-3">@Model.Name</h1>
                <p class="lead text-muted">Category: @Model.Category?.Name</p>
                <h2 class="mb-4">Price: ₹@Model.Price.ToString("N2")</h2>

                <h4 class="mt-4">Description:</h4>
                <p>@Model.Description</p>
                <div class="d-flex align-items-center mt-4">
                    <button id="detail-add-to-cart-btn" class="btn btn-danger btn-lg"
                            data-product-id="@Model.ProductId"
                            data-product-name="@Model.Name"
                            data-product-price="@Model.Price"
                            data-product-image="@imagePath">
                        Add to Cart
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // --- Add to Cart Logic for this Details Page ---
            $('#detail-add-to-cart-btn').on('click', function () {
                const $button = $(this);
                const productId = $button.data('product-id');
                const productName = $button.data('product-name');
                const productPrice = $button.data('product-price');
                const productImage = $button.data('product-image');

                // This calls the GLOBAL function from _Layout.cshtml
                // which handles all the dynamic updates automatically.
                addProductToCartShared(productId, productName, productPrice, productImage);
            });
        });
    </script>
}



@section Styles {
    <style>
        .product-details-page .img-fluid {
            border: 1px solid #ddd;
            padding: 10px;
        }
    </style>
}